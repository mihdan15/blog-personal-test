<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="formTitleLabel">Title</label>
    <input type="text" class="form-control" id="formTitleId" name="title" />
  </div>

  <div class="form-group">
    <label for="formPostLabel">Post</label>
    <textarea
      class="form-control"
      id="formTextAreaId"
      rows="7"
      name="content"
    ></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
